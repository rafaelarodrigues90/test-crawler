{
  "root": true,
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jquery": false,
    "jest": true,
    "jasmine": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "es6": true,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [2, 80],
    "indent": [2, 2],
    "quotes": [
      "error",
      "single"
    ],
    "semi": 0,
    "no-var": [
      "error"
    ],
    "no-console": [
      "off"
    ],
    "no-unused-vars": [
      "error"
    ],
    "no-mixed-spaces-and-tabs": [
      "error"
    ],
    "no-extra-boolean-cast": [
      "off"
    ]
  }
}